<?xml version="1.0" encoding="utf-8" ?>
<testcases repeat="10">
    <variables>
        <variable name="LOGIN_URL">http://myserver/login.php</variable>
        <variable name="LOGIN1">bob</variable>
        <variable name="PASSWD1">sponge</variable>
        <variable name="SUCCESSFULL_TEST_TEXT">Welcome Bob</variable>
    </variables>

    <case
		id="1"
		shortdescription="short description 1"
		longdescription="long description"
		method="post"
		url="http://myserver/test/login.jsp"
		logrequest="yes"
		logresponse="yes"
		sleep="3"
	>
        <postbody>
            <![CDATA[username=corey&password=welcome]]>
        </postbody>
        
        <verifypositives>
            <verify description="1">verify this string exists</verify>
        </verifypositives>

        <verifynegatives>
            <verify description="1">verify this string does not exist</verify>
        </verifynegatives>
    </case>

    <case
		id="300"
		shortdescription="short description 300"
		longdescription="long description"
		method="get"
		url="http://myserver/test/send.jsp?value={TIMESTAMP}"
		verifypositive="verify this string exists"
		verifynextpositive="{TIMESTAMP}"
	>
        <verifypositives>
            <verify id="1">verify this string exists</verify>
        </verifypositives>
    </case>

    <case
		id="20"
		shortdescription="short description 20"
		longdescription="long description"
		method="get"
		url="http://myserver/test/send.jsp?value={TIMESTAMP}"
	>
        <verifypositives>
            <verify description="1">verify this string exists</verify>
        </verifypositives>
    </case>

    <case
		id="9"
		shortdescription="short description 9"
		longdescription="long description 9"
		method="post"
		url="http://myserver/test/send.jsp?value={TIMESTAMP}"
	>
        <verifypositives>
            <verify description="1">verify this string exists</verify>
        </verifypositives>
    </case>
</testcases>