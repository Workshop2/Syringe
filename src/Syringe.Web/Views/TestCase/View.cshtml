@model TestSuiteViewModel
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <img alt="Brand" src="~/img/syringe.svg" width="150" height="150">
        </div>
        <div class="col-md-10">
            <h2>Test cases for @Model.Filename</h2>

            @Html.Partial("~/Views/Shared/Partials/_TestCasePager.cshtml")
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TestCaseViewModel testCase in Model.TestCases)
                    {
                        <tr>
                            <td>@testCase.Id</td>
                            <td>
                                <p>@testCase.ShortDescription</p> <h6>@testCase.Url</h6>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "TestCase", new {filename = Model.Filename, testCaseId = testCase.Id})"><i class="mdi-image-edit"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @Html.Partial("~/Views/Shared/Partials/_TestCasePager.cshtml")



        </div>
    </div>
</div>