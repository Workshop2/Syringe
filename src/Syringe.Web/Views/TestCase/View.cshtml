@model TestFileViewModel
@{
    ViewBag.Title = "Viewing " + Model.Filename;
}
<div class="container" id="view-file">
    <div class="row">
        <div class="col-xs-12">
            <ul class="breadcrumb">
                <li><a title="View" href="/">Test tests</a></li>
                <li>@Model.Filename</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <nav class="col-xs-8">
            @Html.Partial("Partials/_TestCasePager")
        </nav>
        <div class="col-xs-4 text-right">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Add", "TestCase", new {filename = Model.Filename, pageNumber = Model.PageNumber, noOfResults = Model.NoOfResults})">Add</a>
	        <a class="btn btn-sm btn-primary" href="@Url.Action("Update", "TestFile", new {filename = Model.Filename, pageNumber = Model.PageNumber, noOfResults = Model.NoOfResults})">Variables</a>
			<a class="btn btn-sm btn-primary" href="@Url.Action("EditXml", "TestCase", new {filename = Model.Filename, pageNumber = Model.PageNumber, noOfResults = Model.NoOfResults})">View XML</a>
        </div>
    </div>

    @if (Model.TestCases.Any() == false)
    {
        <p>No test tests found.</p>}
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (TestViewModel testCase in Model.TestCases)
                {
                    <tr>
                        <td class="description">
                            <p>@testCase.ShortDescription</p> <h6>@testCase.Url</h6>
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "TestCase"))
                            {
	                            <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "TestCase", new {filename = Model.Filename, testCaseId = testCase.Id, pageNumber = Model.PageNumber, noOfResults = Model.NoOfResults})">
									<i class="material-icons">mode_edit</i>
	                            </a>

                                <input type="hidden" name="filename" value="@Model.Filename" />
                                <input type="hidden" name="testCaseId" value="@testCase.Id" />
	                            <button class="btn btn-sm btn-danger" type="submit">
									<i class="material-icons">delete</i>
	                            </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @Html.Partial("Partials/_TestCasePager")
    }
</div>