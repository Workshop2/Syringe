@model TestFileViewModel
@{
	ViewBag.Title = "Viewing " +Model.Filename;
}
<div class="container" id="view-file">
    <div class="row">

		<ul class="breadcrumb">
			<li><a title="View" href="/">Test cases</a></li>
			<li>@Model.Filename</li>
		</ul>

	    <div>
		    <div class="row">
			    <nav class="col-xs-8">
				    @Html.Partial("Partials/_TestCasePager")
			    </nav>
			    <div class="col-xs-4 text-right">
				    <a class="btn btn-sm btn-primary" href="@Url.Action("Add", "TestCase", new {filename = Model.Filename})">Add</a>
				    <a class="btn btn-sm btn-primary" href="@Url.Action("Update", "TestFile", new {filename = Model.Filename})">Variables</a>
			    </div>
		    </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TestCaseViewModel testCase in Model.TestCases)
                    {
                        <tr>
                            <td class="description">
                                <p>@testCase.ShortDescription</p> <h6>@testCase.Url</h6>
                            </td>
                            <td>
                                @using (Html.BeginForm("Delete", "TestCase"))
                                {
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "TestCase", new {filename = Model.Filename, testCaseId = testCase.Id})"><i class="mdi-image-edit"></i></a>

                                    <input type="hidden" name="filename" value="@Model.Filename" />
                                    <input type="hidden" name="testCaseId" value="@testCase.Id" />
                                    <button class="btn btn-sm btn-danger" type="submit"><i class="mdi-action-delete"></i></button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @Html.Partial("Partials/_TestCasePager")
        </div>
    </div>
</div>