@model VariableViewModel

<div class="form-group">
	@Html.LabelFor(x => Model.Name, new { @class = "col-sm-2 control-label" })
	<div class="col-sm-3">
		@Html.TextBoxFor(x => Model.Name, new { @class = "form-control", placeholder = "Key" })
	</div>

	@Html.LabelFor(x => Model.Value, new { @class = "col-sm-2 control-label" })
	<div class="col-xs-4 col-sm-3 col-lg-4">
		@Html.TextBoxFor(x => Model.Value, new { @class = "form-control", placeholder = "Value" })
	</div>

	@Html.LabelFor(x => Model.Environment, new { @class = "col-sm-2 control-label" })
	<div class="col-xs-4 col-sm-3 col-lg-4">
		@Html.TextBoxFor(x => Model.Environment, new { @class = "form-control", placeholder = "Environment" })
	</div>

	<div class="col-xs-1 col-sm-2 col-lg-1">
		@Html.Partial("Partials/_RemoveRow")
	</div>
</div>
