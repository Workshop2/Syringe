@model TestFileViewModel

@{
    ViewBag.Title = "Add Test Case";
}
<div class="container" id="edit-test">
    <div class="row">
        <form action="@(Request.RawUrl)" method="post" class="form-horizontal">
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                @Html.ValidationSummary("", new { @class = "alert alert-danger" })
            }
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">General</h3>
                </div>
                <div class="panel-body">
                    <div class="row"></div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Filename, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Filename, new { @class = "form-control", placeholder = "Enter Filename" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title  pull-left">Variables</h3>
                    <button type="submit" class="btn btn-primary glyphicon glyphicon-plus pull-right" id="addVariableItem"></button>
                </div>
                <div class="panel-body">
                    @Html.EditorFor(x => x.Variables)
                </div>
            </div>
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
</div>
