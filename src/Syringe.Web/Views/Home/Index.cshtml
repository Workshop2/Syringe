@model IndexViewModel
<div class="container">
	<div class="row">
		<div class="col-md-2">
			<img alt="Brand" src="~/img/syringe.svg" width="150" height="150">
		</div>

		<div class="col-md-10">
		    <h2>Test cases</h2>
            <a class="btn btn-sm btn-primary" href="@Url.Action("Add", "TestFile")">Add</a>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<td></td>
					</tr>
				</thead>
				<tbody>
				@foreach (string filename in Model.Files)
				{
					<tr>
						<td>@filename</td>
						<td>
							<a class="btn btn-sm btn-primary" href="@Url.Action("Run", "Home", new { filename = filename })">Run</a>
							<a class="btn btn-sm btn-primary" href="@Url.Action("View", "TestCase", new { filename = filename })">View</a>
						</td>
					</tr>
				}
				</tbody>
			</table>
		</div>
	</div>
</div>