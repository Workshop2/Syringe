@model IndexViewModel
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <img alt="Brand" src="~/img/syringe.svg" width="150" height="150">
        </div>

        <div class="col-md-10">
            <h2>Test cases</h2>
            <div class="row">
                <nav class="col-xs-10">
                    @Html.Partial("~/Views/Shared/Partials/_TestFilePager.cshtml")
                </nav>
                <div class="col-xs-2 text-right">
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Add", "TestFile")">Add</a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @using (Html.BeginForm("Run", "Home"))
                    {
                        foreach (string filename in Model.Files)
                        {
                            <tr>
                                <td>@filename</td>
                                <td>
                                    <button title="Run" class="btn btn-sm btn-primary" type="submit" name="filename" value="@filename">
                                        <i class="mdi-maps-directions-walk"></i>
                                     </button>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("View", "TestCase", new {filename = filename})">View</a>
                                    <a title="Edit" class="btn btn-sm btn-primary" href="@Url.Action("Update", "TestFile", new {filename = filename})">
                                        <i class="mdi-image-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            @Html.Partial("~/Views/Shared/Partials/_TestFilePager.cshtml")
        </div>
    </div>
</div>