@model AssertionViewModel

<div class="form-group">
	@Html.LabelFor(x => Model.Description, new { @class = "col-sm-1 control-label" })
	<div class="col-sm-2">
		@Html.TextBoxFor(x => Model.Description, new { @class = "form-control", placeholder = "Description" })
	</div>

	@Html.LabelFor(x => Model.Regex, new { @class = "col-sm-1 col-md-1 control-label" })
	<div class="col-sm-4">
		@Html.TextBoxFor(x => Model.Regex, new { @class = "form-control", placeholder = "Regex" })
	</div>

	@Html.LabelFor(x => Model.AssertionType, new { @class = "col-sm-1 col-md-1 control-label" })
	<div class="col-sm-2">
		@Html.EnumDropDownListFor(x => Model.AssertionType, new {@class = "form-control", placeholder = "Verify Type"})
	</div>

	<div class="col-sm-1">
		@Html.Partial("Partials/_RemoveRow")
	</div>
</div>
